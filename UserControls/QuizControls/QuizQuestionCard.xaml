<UserControl x:Class="TuteefyWPF.UserControls.QuizQuestionCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TuteefyWPF.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border CornerRadius="15"
            Padding="25"
            Margin="0,0,0,20"
            Background="White"
            BorderBrush="#E0E0E0"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="#AEBAF8" 
                              BlurRadius="15" 
                              ShadowDepth="3" 
                              Opacity="0.2"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Question Section -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Question" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="#9600ff" 
                           Margin="0,0,0,10"
                           />
                <TextBox x:Name="QuestionTextBox"
                         Style="{StaticResource RoundedPlaceholderTextBox}"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         MinHeight="60"
                         Padding="10"
                         FontSize="14"
                         Background="#F9F9F9"
                         BorderBrush="#D0D0D0"
                         BorderThickness="1"
                         VerticalScrollBarVisibility="Auto" TextChanged="QuestionTextBox_TextChanged"/>
            </StackPanel>

            <!-- Choices Section -->
            <StackPanel Grid.Row="1" Margin="0,0,0,20">
                <TextBlock Text="Answer Choices" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Foreground="#9600ff" 
                           Margin="0,0,0,15"/>

                <Grid Height="162">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Choice A -->
                    <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,10,15">
                        <TextBlock Text="A." 
                                   FontSize="13" 
                                   FontWeight="Medium" 
                                   Foreground="#666" 
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="ChoiceATextBox"
                                 Style="{StaticResource RoundedPlaceholderTextBox}"
                                 Padding="10"
                                 FontSize="13"
                                 Background="#F9F9F9"
                                 BorderBrush="#D0D0D0"
                                 BorderThickness="1"/>
                    </StackPanel>

                    <!-- Choice B -->
                    <StackPanel Grid.Column="1" Grid.Row="0" Margin="10,0,0,15">
                        <TextBlock Text="B." 
                                   FontSize="13" 
                                   FontWeight="Medium" 
                                   Foreground="#666" 
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="ChoiceBTextBox"
                                 Style="{StaticResource RoundedPlaceholderTextBox}"
                                 Padding="10"
                                 FontSize="13"
                                 Background="#F9F9F9"
                                 BorderBrush="#D0D0D0"
                                 BorderThickness="1"/>
                    </StackPanel>

                    <!-- Choice C -->
                    <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,10,0">
                        <TextBlock Text="C." 
                                   FontSize="13" 
                                   FontWeight="Medium" 
                                   Foreground="#666" 
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="ChoiceCTextBox"
                                 Style="{StaticResource RoundedPlaceholderTextBox}"
                                 Padding="10"
                                 FontSize="13"
                                 Background="#F9F9F9"
                                 BorderBrush="#D0D0D0"
                                 BorderThickness="1"/>
                    </StackPanel>

                    <!-- Choice D -->
                    <StackPanel Grid.Column="1" Grid.Row="1" Margin="10,0,0,0">
                        <TextBlock Text="D." 
                                   FontSize="13" 
                                   FontWeight="Medium" 
                                   Foreground="#666" 
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="ChoiceDTextBox"
                                 Style="{StaticResource RoundedPlaceholderTextBox}"
                                 Padding="10"
                                 FontSize="13"
                                 Background="#F9F9F9"
                                 BorderBrush="#D0D0D0"
                                 BorderThickness="1"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button x:Name="RemoveButton"
                        Style="{StaticResource AnimatedGradientButton}"
                        Content="Remove"
                        Width="100"
                        Height="38"
                        Margin="0,0,10,0"
                        FontWeight="SemiBold"
                        FontSize="13"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="RemoveButton_Click">
                    
                </Button>

                <Button x:Name="DoneButton"
                        Style="{StaticResource AnimatedGradientButton}"
                        Content="Done"
                        Width="100"
                        Height="38"
                        FontWeight="SemiBold"
                        FontSize="13"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="DoneButton_Click">
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
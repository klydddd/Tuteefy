<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="TuteefyWPF.UserControls.TuteeQuizCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             Width="270" Height="350">

    <Border x:Name="CardBorder"
            CornerRadius="20"
            Background="White"
            Margin="10"
            SnapsToDevicePixels="True"
            RenderTransformOrigin="0.5,0.5"
            MouseEnter="Card_MouseEnter"
            MouseLeave="Card_MouseLeave">

        <Border.RenderTransform>
            <TransformGroup>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
                <TranslateTransform/>
            </TransformGroup>
        </Border.RenderTransform>

        <Border.Effect>
            <DropShadowEffect Color="#9600ff" BlurRadius="20" ShadowDepth="0" Opacity="0.2"/>
        </Border.Effect>

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Icon/Header Section -->
            <Border Grid.Row="0" CornerRadius="15">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#9600ff" Offset="0"/>
                        <GradientStop Color="#AEBAF8" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="📝"
                               Foreground="White"
                               FontSize="60"
                               HorizontalAlignment="Center"/>

                    <!-- Completion Badge -->
                    <Border x:Name="CompletedBadge"
                            Background="#4CAF50"
                            CornerRadius="5"
                            Padding="8,4"
                            Margin="0,10,0,0"
                            Visibility="Collapsed">
                        <TextBlock Text="✓ Completed"
                                   Foreground="White"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   FontFamily="Poppins"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Quiz Title -->
            <StackPanel Grid.Row="1" Margin="0,10,0,0">
                <TextBlock x:Name="QuizTitleText"
                           Text="Quiz Title"
                           FontFamily="Poppins"
                           FontWeight="Bold"
                           Foreground="#9600ff"
                           FontSize="18"
                           TextTrimming="CharacterEllipsis"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           MaxHeight="50"/>
            </StackPanel>

            <!-- Quiz Info & Button -->
            <StackPanel Grid.Row="2" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0,10,0,0">

                <!-- Question Count -->
                <TextBlock x:Name="QuestionCountText"
                           Text="0 Questions"
                           Foreground="Gray"
                           FontSize="12"
                           FontFamily="Poppins"
                           TextAlignment="Center"
                           Margin="0,0,0,5"/>

                <!-- Total Points -->
                <TextBlock x:Name="TotalPointsText"
                           Text="0 Points"
                           Foreground="Gray"
                           FontSize="11"
                           FontFamily="Poppins"
                           FontWeight="Bold"
                           TextAlignment="Center"
                           Margin="0,0,0,10"/>

                <!-- Score Display -->
                <StackPanel x:Name="ScoreDisplay"
                            Visibility="Collapsed"
                            Margin="0,5,0,10">
                    <TextBlock x:Name="ScoreText"
                               Text="Score: 0/0"
                               Foreground="#4CAF50"
                               FontSize="14"
                               FontFamily="Poppins"
                               FontWeight="Bold"
                               TextAlignment="Center"/>
                </StackPanel>

                <!-- Take Quiz Button -->
                <Button x:Name="TakeQuizButton"
                        Content="TAKE QUIZ"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Height="35"
                        Width="120"
                        Foreground="White"
                        FontWeight="Bold"
                        FontFamily="Poppins"
                        Cursor="Hand"
                        Click="TakeQuizButton_Click"
                        FontSize="10"
                        Margin="0,10,0,0">

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    CornerRadius="10"
                                    BorderThickness="0"
                                    SnapsToDevicePixels="True">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#9600ff" Offset="0"/>
                                    </LinearGradientBrush>
                                </Border.Background>

                                <Border.Effect>
                                    <DropShadowEffect Color="#9600ff"
                                                      BlurRadius="20"
                                                      ShadowDepth="0"
                                                      Opacity="0.3"/>
                                </Border.Effect>

                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
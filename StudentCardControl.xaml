<UserControl x:Class="TuteefyWPF.StudentCardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TuteefyWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button x:Name="CardButton"
                Width="260"
                Height="200"
                Background="#F9F7FF"
                BorderThickness="0"
                Cursor="Hand"
                Click="CardButton_Click"
                Margin="10">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <!-- Card background -->
                        <Border x:Name="CardBorder"
                                CornerRadius="20"
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="True"
                                Effect="{DynamicResource ShadowEffect}">
                            <Grid VerticalAlignment="Center">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <!-- Student Name -->
                                    <TextBlock Text="{Binding StudentName, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="#5E35B1"
                                               TextAlignment="Center"/>

                                    <!-- Subject -->
                                    <TextBlock Text="{Binding Subject, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                               FontSize="14"
                                               Foreground="#7E57C2"
                                               Margin="0,5,0,10"
                                               TextAlignment="Center"/>

                                    <!-- Total Grade -->
                                    <Border Background="#7C4DFF"
                                            CornerRadius="12"
                                            Padding="8,4"
                                            HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding TotalGrade, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Ripple animation circle -->
                        <Ellipse x:Name="Ripple"
                                 Fill="#B39DDB"
                                 Opacity="0"
                                 Width="0"
                                 Height="0"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                    </Grid>

                    <!-- Animations -->
                    <ControlTemplate.Triggers>
                        <!-- Hover effect -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="CardBorder" Property="Background" Value="#EEE6FF"/>
                            <Setter TargetName="CardBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.3"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <!-- Ripple animation on click -->
                        <EventTrigger RoutedEvent="Button.Click">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="Ripple"
                                                     Storyboard.TargetProperty="Width"
                                                     To="400" Duration="0:0:0.4" />
                                    <DoubleAnimation Storyboard.TargetName="Ripple"
                                                     Storyboard.TargetProperty="Height"
                                                     To="400" Duration="0:0:0.4" />
                                    <DoubleAnimation Storyboard.TargetName="Ripple"
                                                     Storyboard.TargetProperty="Opacity"
                                                     From="0.3" To="0" Duration="0:0:0.5" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</UserControl>

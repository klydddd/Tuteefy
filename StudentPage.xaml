<Page x:Class="TuteefyWPF.StudentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TuteefyWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="Transparent"
      Title="StudentPage">

    <Page.Resources>
        <!-- Modern Card Style -->
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#9600ff" BlurRadius="15" ShadowDepth="5" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform Y="0"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)" To="-5" Duration="0:0:0.3"/>
                            <DoubleAnimation Storyboard.TargetProperty="Effect.(DropShadowEffect.BlurRadius)" To="25" Duration="0:0:0.3"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)" To="0" Duration="0:0:0.3"/>
                            <DoubleAnimation Storyboard.TargetProperty="Effect.(DropShadowEffect.BlurRadius)" To="15" Duration="0:0:0.3"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <!-- Card Header -->
        <Style x:Key="CardHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#1E1E1E"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="10,0,0,10"/>
        </Style>

        <!-- Icon Style -->
        <Style x:Key="CardIcon" TargetType="Path">
            <Setter Property="Fill" Value="#9600ff"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Stretch" Value="Uniform"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Buttons -->
        <Style x:Key="AccentButton" TargetType="Button">
            <Setter Property="Background" Value="#9600ff"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#9600ff" BlurRadius="10" ShadowDepth="3" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#AEBAF8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource AccentButton}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#9600ff"/>
        </Style>

        <!-- TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#f5f5f5"/>
            <Setter Property="Foreground" Value="#1E1E1E"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="Background" Value="#AEBAF8"/>
                                <Setter Property="Foreground" Value="#1E1E1E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <Grid>
        <!-- Header -->
        <TextBlock Text="Welcome, [Student Name]!" 
                   FontSize="28" FontWeight="Bold" 
                   Foreground="White" 
                   Margin="50,30,0,0"/>

        <!-- Main Grid -->
        <Grid Margin="40,90,40,40">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- To-Do Card -->
            <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource ModernCard}" Margin="0,0,15,15">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Path Style="{StaticResource CardIcon}"/>
                        <TextBlock Text="To-Do List" Style="{StaticResource CardHeader}"/>
                    </StackPanel>
                    <ListBox Height="150" Background="Transparent" Foreground="#1E1E1E"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Right">
                        <TextBox Width="150" Height="30" />
                        <Button Content="Add" Width="70" Height="30" Style="{StaticResource AccentButton}" Margin="5,0,0,0"/>
                        <Button Content="Remove" Width="70" Height="30" Style="{StaticResource DangerButton}" Margin="5,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Scores Card -->
            <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource ModernCard}" Margin="15,0,0,15">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Path Style="{StaticResource CardIcon}"/>
                        <TextBlock Text="View Performance" Style="{StaticResource CardHeader}"/>
                    </StackPanel>
                    <TextBlock Text="Performance metrics will appear here..." Foreground="#1E1E1E" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Lessons Card -->
            <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource ModernCard}" Margin="0,15,15,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Path Style="{StaticResource CardIcon}"/>
                        <TextBlock Text="Review Lessons" Style="{StaticResource CardHeader}"/>
                    </StackPanel>
                    <DataGrid AutoGenerateColumns="True" CanUserAddRows="False" Background="Transparent" Foreground="#1E1E1E"/>
                </StackPanel>
            </Border>

            <!-- Notebook Card -->
            <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource ModernCard}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="15,15,0,0">
                <StackPanel HorizontalAlignment="Center">
                    <Border Width="100" Height="100" CornerRadius="50">
                        <Border.Background>
                            <ImageBrush ImageSource="/baby beel.jpg" Stretch="UniformToFill"/>
                        </Border.Background>
                    </Border>
                    <Button Content="Go To Notebook" Width="140" Height="38" Margin="0,20,0,0" Style="{StaticResource AccentButton}"/>
                </StackPanel>
            </Border>

        </Grid>
    </Grid>
</Page>

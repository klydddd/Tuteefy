<Window x:Class="TuteefyWPF.TuteefyMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TuteefyWPF"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Background="#0f0f0f"
        Title="TuteefyMain"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" SpreadMethod="Pad">
                <LinearGradientBrush.RelativeTransform>
                    <TransformGroup>
                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                        <SkewTransform CenterX="0.5" CenterY="0.5"/>
                        <RotateTransform Angle="6.116" CenterX="0.5" CenterY="0.5"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </LinearGradientBrush.RelativeTransform>
                <LinearGradientBrush.Transform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-66.371"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </LinearGradientBrush.Transform>
                <GradientStop Color="#9600ff" Offset="0"/>
                <GradientStop Color="#AEBAF8" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Rectangle Margin="310,0,-63,0" RadiusY="15" RadiusX="15" Opacity="1" Grid.ColumnSpan="3">
            <Rectangle.Stroke>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="#f0f0f0" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Stroke>
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" SpreadMethod="Pad">
                    <GradientStop Color="AliceBlue" Offset="0"/>
                    <GradientStop Color="white" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
            <Rectangle.Effect>
                <DropShadowEffect Color="#FF866EA5"
                          BlurRadius="55"
                          ShadowDepth="61"
                          Opacity="0.72" Direction="317"/>
            </Rectangle.Effect>

        </Rectangle>
        <Label x:Name="PageTitle" Content="Home" IsEnabled="False" FontWeight="Bold" Foreground="#9600ff" FontSize="54" HorizontalContentAlignment="Left" Margin="378,62,639,691" />

        <StackPanel Margin="0,0,1067,0">
            <Label Content="logo" HorizontalAlignment="Left" Margin="30,62,0,0" IsEnabled="False" FontWeight="Bold" Foreground="White" FontSize="54" Width="291" HorizontalContentAlignment="Left"/>
            <RadioButton 
             x:Name="HomeTab"
                Style="{StaticResource RoundedTabRadioButton}"
             Content="Home"
             Height="50"
             GroupName="Tabs"
             Margin="0,10,0,0"
             IsChecked="True"
             />

            <RadioButton Style="{StaticResource RoundedTabRadioButton}"
             x:Name="StudentTab"
             Content="Students"
             Height="50"
             Margin="0,10,0,0"
             GroupName="Tabs"
             />

            <RadioButton Style="{StaticResource RoundedTabRadioButton}"
             x:Name="LessonsTab"
             Content="Lessons"
             Height="50"
             Margin="0,10,0,0"
             GroupName="Tabs"
             />

            <RadioButton Style="{StaticResource RoundedTabRadioButton}"
             x:Name="QuizzesTab"
             Content="Quizzes"
             Height="50"
             Margin="0,10,0,0"
             GroupName="Tabs"
             />
            <RadioButton Style="{StaticResource RoundedTabRadioButton}"
                x:Name="QuizzesTab_Copy"
                Content="Log out"
                Height="50"
                GroupName="Tabs"
                Margin="0,400,0,0" Checked="QuizzesTab_Copy_Checked" 
             />





        </StackPanel>

        <Frame x:Name="MainFrame" Source="Pages/HomePage.xaml" Margin="325,175,10,21" NavigationUIVisibility="Hidden"/>



    </Grid>
</Window>

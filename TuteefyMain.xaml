<Window x:Class="TuteefyWPF.TuteefyMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TuteefyWPF"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Background="#0f0f0f"
        Title="TuteefyMain"
        MinHeight="900"
        MinWidth="1600"
        >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="305"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Background Gradient -->
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" SpreadMethod="Pad">
                <LinearGradientBrush.RelativeTransform>
                    <TransformGroup>
                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                        <SkewTransform CenterX="0.5" CenterY="0.5"/>
                        <RotateTransform Angle="6.116" CenterX="0.5" CenterY="0.5"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </LinearGradientBrush.RelativeTransform>
                <LinearGradientBrush.Transform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-66.371"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </LinearGradientBrush.Transform>
                <GradientStop Color="#9600ff" Offset="0"/>
                <GradientStop Color="#AEBAF8" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Left Sidebar -->
        <Grid Grid.Column="0">
            <StackPanel>
                <Label Content="tuteefy" 
                       HorizontalAlignment="Left" 
                       Margin="30,45,0,0" 
                       IsEnabled="False" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       FontSize="54" 
                       HorizontalContentAlignment="Left"/>

                <RadioButton x:Name="HomeTab"
                             Style="{StaticResource RoundedTabRadioButton}"
                             Height="50"
                             GroupName="Tabs"
                             Margin="0,20,0,0"
                             IsChecked="True">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M10,20V14H14V20H19V12H22L12,3L2,12H5V20H10Z" 
                              Fill="{Binding RelativeSource={RelativeSource AncestorType=RadioButton}, Path=Foreground}"
                              Stretch="Uniform"
                              Width="20"
                              Height="20"
                              Margin="0,0,10,0"/>
                        <TextBlock Text="Home" VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton Style="{StaticResource RoundedTabRadioButton}"
                             x:Name="StudentTab"
                             Height="50"
                             Margin="0,20,0,0"
                             GroupName="Tabs">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z" 
                              Fill="{Binding RelativeSource={RelativeSource AncestorType=RadioButton}, Path=Foreground}"
                              Stretch="Uniform"
                              Width="20"
                              Height="20"
                              Margin="0,0,10,0"/>
                        <TextBlock Text="Students" VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton Style="{StaticResource RoundedTabRadioButton}"
                             x:Name="LessonsTab"
                             Height="50"
                             Margin="0,20,0,0"
                             GroupName="Tabs">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M19,2L14,6.5V17.5L19,13V2M6.5,5C4.55,5 2.45,5.4 1,6.5V21.16C1,21.41 1.25,21.66 1.5,21.66C1.6,21.66 1.65,21.59 1.75,21.59C3.1,20.94 5.05,20.5 6.5,20.5C8.45,20.5 10.55,20.9 12,22C13.35,21.15 15.8,20.5 17.5,20.5C19.15,20.5 20.85,20.81 22.25,21.56C22.35,21.61 22.4,21.59 22.5,21.59C22.75,21.59 23,21.34 23,21.09V6.5C22.4,6.05 21.75,5.75 21,5.5V19C19.9,18.65 18.7,18.5 17.5,18.5C15.8,18.5 13.35,19.15 12,20V6.5C10.55,5.4 8.45,5 6.5,5Z" 
                              Fill="{Binding RelativeSource={RelativeSource AncestorType=RadioButton}, Path=Foreground}"
                              Stretch="Uniform"
                              Width="20"
                              Height="20"
                              Margin="0,0,10,0"/>
                        <TextBlock Text="Lessons" VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton Style="{StaticResource RoundedTabRadioButton}"
                             x:Name="QuizzesTab"
                             Height="50"
                             Margin="0,20,0,0"
                             GroupName="Tabs">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M4,6H2V20A2,2 0 0,0 4,22H18V20H4V6M20,2H8A2,2 0 0,0 6,4V16A2,2 0 0,0 8,18H20A2,2 0 0,0 22,16V4A2,2 0 0,0 20,2M20,12H8V4H20V12M10,9H14V14H10V9M16,9H18V14H16V9M10,15H14V16H10V15Z" 
                              Fill="{Binding RelativeSource={RelativeSource AncestorType=RadioButton}, Path=Foreground}"
                              Stretch="Uniform"
                              Width="20"
                              Height="20"
                              Margin="0,0,10,0"/>
                        <TextBlock Text="Quizzes" VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
            </StackPanel>

            <!-- Settings and Log Out Buttons at Bottom -->
            <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,30">
                <RadioButton Style="{StaticResource RoundedTabRadioButton}"
                             Visibility="Hidden"
                         x:Name="SettingsBtn"
                         Height="50"
                         GroupName="Tabs"
                         VerticalAlignment="Bottom"
                         Margin="0,0,0,0"
                         Checked="Settings_Checked">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z" 
                          Fill="{Binding RelativeSource={RelativeSource AncestorType=RadioButton}, Path=Foreground}"
                          Stretch="Uniform"
                          Width="20"
                          Height="20"
                          Margin="0,0,10,0"/>
                        <TextBlock Text="Settings" VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton Style="{StaticResource RoundedTabRadioButton}"
                         x:Name="LogOutBtn"
                         Height="50"
                         GroupName="Tabs"
                         VerticalAlignment="Top"
                         Margin="0,0,0,0"
                         Checked="LogOut_Checked">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M16,17V14H9V10H16V7L21,12L16,17M14,2A2,2 0 0,1 16,4V6H14V4H5V20H14V18H16V20A2,2 0 0,1 14,22H5A2,2 0 0,1 3,20V4A2,2 0 0,1 5,2H14Z" 
                          Fill="{Binding RelativeSource={RelativeSource AncestorType=RadioButton}, Path=Foreground}"
                          Stretch="Uniform"
                          Width="20"
                          Height="20"
                          Margin="0,0,10,0"/>
                        <TextBlock Text="Log out" VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
            </StackPanel>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Margin="10,0,10,0">
            <!-- Content Background Rectangle -->
            <Rectangle RadiusY="15" 
                       RadiusX="15" 
                       Opacity="1" Margin="0,0,-25,0">
                <Rectangle.Stroke>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="#f0f0f0" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Stroke>
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" SpreadMethod="Pad">
                        <GradientStop Color="AliceBlue" Offset="0"/>
                        <GradientStop Color="white" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
                <Rectangle.Effect>
                    <DropShadowEffect Color="#FF866EA5"
                                      BlurRadius="55"
                                      ShadowDepth="61"
                                      Opacity="0.72" 
                                      Direction="317"/>
                </Rectangle.Effect>
            </Rectangle>

            <!-- Page Title -->
            <Label x:Name="PageTitle" 
                   Content="Home" 
                   IsEnabled="False" 
                   FontWeight="Bold" 
                   Foreground="#9600ff" 
                   FontSize="54" 
                   HorizontalContentAlignment="Left" 
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Margin="40,44,0,0"/>

            <!-- Main Frame for Page Content -->
            <Frame x:Name="MainFrame" 
                   Source="Pages/HomePage.xaml" 
                   Margin="15,146,15,21" 
                   NavigationUIVisibility="Hidden" Navigated="MainFrame_Navigated_1"/>
        </Grid>
    </Grid>
</Window>
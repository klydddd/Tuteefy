<Window x:Class="TuteefyWPF.SignupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TuteefyWPF"
        mc:Ignorable="d"
        Title="SignupWindow" Height="650" Width="850"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        >



    <Grid Background="#f0f0f0">

        <Rectangle Margin="0,45,-939,0" Canvas.Left="0">
            <Rectangle.Fill>
                <LinearGradientBrush>
                    <GradientStop Color="#9600ff" Offset="0"/>
                    <GradientStop Color="#AEBAF8" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>

            <Rectangle.Triggers>
                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                            <ThicknessAnimation
                        Storyboard.TargetProperty="Margin"
                        From="0,45,-939,-31"
                        To="-939,45,0,-31"
                        Duration="0:0:6"
                        AutoReverse="True"
                        FillBehavior="HoldEnd"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Rectangle.Triggers>
        </Rectangle>

        <Rectangle Fill="White" Opacity="0.2" RadiusX="20" RadiusY="20" Margin="220,76,220,38" StrokeThickness="3">
            <Rectangle.Stroke>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#9600ff" Offset="0"/>
                    <GradientStop Color="#AEBAF8" Offset="1"/>

                </LinearGradientBrush>
            </Rectangle.Stroke>
            <Rectangle.Effect>
                <DropShadowEffect Color="#9600ff" BlurRadius="15" ShadowDepth="40" Opacity="0.4" RenderingBias="Quality"/>
            </Rectangle.Effect>

        </Rectangle>
        <Label Content="Sign up" HorizontalAlignment="Center" Margin="0,108,0,0" VerticalAlignment="Top"
            IsEnabled="False" FontWeight="Bold" Foreground="White" FontSize="32">

        </Label>
        <TextBox x:Name="txtFullName"
            Style="{StaticResource RoundedPlaceholderTextBox}"
            Tag="username"  
            Width="330"
            Height="45"
            Margin="0,210,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            TextWrapping="Wrap"/>
        <Label Content="Full name" HorizontalAlignment="Left" Margin="260,186,0,0" VerticalAlignment="Top"
            IsEnabled="False" FontWeight="Bold" Foreground="White" FontSize="14">
        </Label>
        <TextBox x:Name="txtEmail"
            Style="{StaticResource RoundedPlaceholderTextBox}"
            Tag="username"  
            Width="330"
            Height="45"
            Margin="0,280,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            TextWrapping="Wrap"/>
        <Label Content="E-mail" HorizontalAlignment="Left" Margin="260,255,0,0" VerticalAlignment="Top"
            IsEnabled="False" FontWeight="Bold" Foreground="White" FontSize="14"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="260,330,0,0" VerticalAlignment="Top"
            IsEnabled="False" FontWeight="Bold" Foreground="White" FontSize="14"/>
        <PasswordBox x:Name="txtPassword"
    Style="{StaticResource RoundedPlaceholderPasswordBox}"
    Tag="password"
    Width="330"
    Height="45"
    Margin="0,355,0,0"
    HorizontalAlignment="Center"
    VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtConfirmPass"
            Style="{StaticResource RoundedPlaceholderPasswordBox}"
            Tag="password"
            Width="330"
            Height="45"
            Margin="0,430,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"/>

        <Label Content="Confirm Password" HorizontalAlignment="Left" Margin="260,405,0,0" VerticalAlignment="Top"
            IsEnabled="False" FontWeight="Bold" Foreground="White" FontSize="14"/>

        <CheckBox x:Name="checkPriv" HorizontalAlignment="Center"
          VerticalAlignment="Top"
          Margin="0,491,0,0"
          Width="330"
          Height="33"
          Cursor="Hand">
            <CheckBox.Style>
                <Style TargetType="CheckBox">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="CheckBox">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <!-- Custom checkbox box -->
                                    <Border x:Name="CheckBoxBorder"
                                    Width="18" Height="18"
                                    CornerRadius="4"
                                    BorderThickness="2"
                                    BorderBrush="DarkViolet"
                                    Background="Transparent"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center">
                                        <Path x:Name="CheckMark"
                                      Data="M0,4 L3,7 L8,0"
                                      Stroke="Violet"
                                      StrokeThickness="2"
                                      StrokeEndLineCap="Round"
                                      StrokeStartLineCap="Round"
                                      Visibility="Collapsed"
                                      Stretch="Uniform"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- Text -->
                                    <TextBlock TextWrapping="Wrap"
                                       Text="I hereby declare that the information provided is true and correct."
                                       VerticalAlignment="Center"
                                       Foreground="White"
                                       Width="290"/>
                                </StackPanel>

                                <!-- Triggers -->
                                <ControlTemplate.Triggers>
                                    <!-- Checked state -->
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="CheckBoxBorder" Property="Background" Value="DarkViolet"/>
                                        <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                        <Setter TargetName="CheckMark" Property="Stroke" Value="White"/>
                                    </Trigger>

                                    <!-- Hover state -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="Violet"/>
                                        <Setter TargetName="CheckBoxBorder" Property="Background" Value="#1AFFFFFF"/>
                                    </Trigger>

                                    <!-- Disabled state -->
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="CheckBoxBorder" Property="Opacity" Value="0.5"/>
                                        <Setter Property="Foreground" Value="Gray"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </CheckBox.Style>
        </CheckBox>
        <Button Content="SIGN UP"
    HorizontalAlignment="Center"
    Margin="0,538,0,0"
    VerticalAlignment="Top"
    Height="46"
    Width="330"
    Foreground="White"
    FontWeight="Bold"
    Cursor="Hand" Click="Button_Click">


            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border"
                CornerRadius="10"
                BorderThickness="0"
                SnapsToDevicePixels="True"
                RenderTransformOrigin="0.5,0.5">

                        <Border.RenderTransform>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </Border.RenderTransform>

                        <Border.Background>
                            <LinearGradientBrush StartPoint="0.5,0.5" EndPoint="1,0" SpreadMethod="Reflect">
                                <GradientStop Color="#9600ff" Offset="0"/>

                            </LinearGradientBrush>
                        </Border.Background>

                        <!-- Default glow effect (opacity 0 initially) -->
                        <Border.Effect>
                            <DropShadowEffect Color="DarkViolet"
                        BlurRadius="40"
                        ShadowDepth="0"
                        Opacity="0.2"/>
                        </Border.Effect>

                        <ContentPresenter HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    RecognizesAccessKey="True"/>
                    </Border>

                    <!-- Smooth hover & leave transitions using Storyboards with inline easing -->
                    <ControlTemplate.Triggers>
                        <!-- MouseEnter: fade glow in and slightly lower overall opacity -->
                        <EventTrigger RoutedEvent="UIElement.MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <!-- Animate the DropShadowEffect.Opacity on the border -->
                                    <DoubleAnimation
                                Storyboard.TargetName="border"
                                Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)"
                                To="0.8"
                                Duration="0:0:0.28">
                                        <DoubleAnimation.EasingFunction>
                                            <CubicEase EasingMode="EaseOut"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>

                                    <!-- Animate the border opacity -->
                                    <DoubleAnimation
                                Storyboard.TargetName="border"
                                Storyboard.TargetProperty="Opacity"
                                To="0.95"
                                Duration="0:0:0.28">
                                        <DoubleAnimation.EasingFunction>
                                            <CubicEase EasingMode="EaseOut"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>

                        <!-- MouseLeave: fade glow out -->
                        <EventTrigger RoutedEvent="UIElement.MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                Storyboard.TargetName="border"
                                Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)"
                                To="0"
                                Duration="0:0:0.28">
                                        <DoubleAnimation.EasingFunction>
                                            <CubicEase EasingMode="EaseOut"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>

                                    <DoubleAnimation
                                Storyboard.TargetName="border"
                                Storyboard.TargetProperty="Opacity"
                                To="1"
                                Duration="0:0:0.28">
                                        <DoubleAnimation.EasingFunction>
                                            <CubicEase EasingMode="EaseOut"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>

                        <!-- Pressed state: scale slightly (kept as an immediate setter for snappy feedback) -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            <Setter TargetName="border" Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Label Content="tuteefy" HorizontalAlignment="Left" Margin="10,7,0,0" VerticalAlignment="Top"
            IsEnabled="False" FontWeight="Bold" Foreground="#9600ff"/>

        <Button Content="X" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Margin="0,11,20,0" 
                Foreground="#9600ff" 
                Background="Transparent"
                FontSize="20" 
                FontWeight="Bold" 
                Cursor="Hand" 
                BorderThickness="0"
                Click="CloseButton_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="#AEBAF8"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>

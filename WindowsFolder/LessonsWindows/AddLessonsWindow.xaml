<Window x:Class="TuteefyWPF.WindowsFolder.LessonsWindows.AddLessonsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TuteefyWPF.WindowsFolder.LessonsWindows"
        mc:Ignorable="d"
        Title="AddLessonsWindow"
        Height="600" 
        Width="850"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <DropShadowEffect x:Key="ShadowEffect"
                          Color="#888"
                          BlurRadius="10"
                          ShadowDepth="2"
                          Opacity="0.4"/>
    </Window.Resources>

    <!-- Main Card -->
    <Border Width="Auto"
            Effect="{StaticResource ShadowEffect}"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            CornerRadius="20">

        <!-- Gradient background -->
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="White" Offset="0"/>
                <GradientStop Color="#f9f6ff" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <StackPanel Width="810" Height="Auto">
            <!-- Header Bar -->
            <Border Padding="14">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#9600ff" Offset="0"/>
                        <GradientStop Color="#AEBAF8" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <TextBlock Text="Add Lesson"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- Form Content -->
            <Grid Margin="20,20,20,20" Height="Auto" Width="Auto">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Lesson Title -->
                <StackPanel Margin="10" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                    <TextBlock Text="Lesson Title *"
                               FontWeight="Bold"
                               FontSize="13"
                               Foreground="#5E35B1"/>
                    <Border CornerRadius="6"
                            BorderBrush="#C7B8FF"
                            BorderThickness="1"
                            Background="White">
                        <TextBox x:Name="LessonTitleTextBox"
                                 Style="{StaticResource RoundedPlaceholderTextBox}"
                                 Tag="Lesson Title"
                                 Height="41"
                                 FontSize="13"
                                 Padding="5"
                                 Background="Transparent"
                                 BorderThickness="0"/>
                    </Border>
                </StackPanel>

                <!-- Lesson Code -->
                <StackPanel Margin="10" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                    <TextBlock Text="Lesson Code *"
                               FontWeight="Bold"
                               FontSize="13"
                               Foreground="#5E35B1"/>
                    <Border CornerRadius="6"
                            BorderBrush="#C7B8FF"
                            BorderThickness="1"
                            Background="White">
                        <TextBox x:Name="LessonCodeTextBox"
                                 Style="{StaticResource RoundedPlaceholderTextBox}"
                                 Tag="Lesson Code"
                                 Height="41"
                                 FontSize="13"
                                 Padding="5"
                                 Background="Transparent"
                                 BorderThickness="0"/>
                    </Border>
                </StackPanel>

                <!-- Content -->
                <StackPanel Margin="10" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
                    <TextBlock Text="Lesson Content *"
                               FontWeight="Bold"
                               FontSize="13"
                               Foreground="#5E35B1"/>
                    <Border CornerRadius="6"
                            BorderBrush="#C7B8FF"
                            BorderThickness="1"
                            Background="White">
                        <TextBox x:Name="ContentTextBox"
                                 Style="{StaticResource RoundedPlaceholderTextBox}"
                                 Tag="Lesson Content"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Height="200"
                                 Margin="0,5,0,0"
                                 FontSize="13"
                                 Padding="5"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 VerticalScrollBarVisibility="Auto"/>
                    </Border>
                </StackPanel>

                <!-- Create Lesson Button -->
                <Button x:Name="CreateLessonButton"
                        Content="Create Lesson"
                        Style="{StaticResource AnimatedGradientButton}"
                        Grid.Row="3"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Height="45"
                        Margin="10,20,10,10"
                        HorizontalAlignment="Stretch" Click="CreateLessonButton_Click"
                        />
            </Grid>
        </StackPanel>
    </Border>
</Window>
<Window x:Class="TuteefyWPF.WindowsFolder.StudentWindows.ViewStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TuteefyWPF.WindowsFolder.StudentWindows"
        mc:Ignorable="d"
        Title="ViewStudentWindow"
        Height="500"
        Width="850"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <DropShadowEffect x:Key="ShadowEffect"
                          Color="#888"
                          BlurRadius="10"
                          ShadowDepth="2"
                          Opacity="0.4"/>
    </Window.Resources>

    <!-- Main Card -->
    <Border Width="Auto"
            Effect="{StaticResource ShadowEffect}"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            CornerRadius="20">

        <!-- Gradient background -->
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="White" Offset="0"/>
                <GradientStop Color="#f9f6ff" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <StackPanel Width="810" Height="428" >
            <!-- Header Bar -->
            <Border Padding="14">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#9600ff" Offset="0"/>
                        <GradientStop Color="#AEBAF8" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <TextBlock Text="View Student"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- Form Content -->
            <Grid Margin="20,20,20,20" Height="Auto" Width="Auto">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- First Name -->
                <StackPanel Margin="10" Grid.Row="0" Grid.Column="0">
                    <TextBlock Text="First Name"
                               FontWeight="Bold"
                               FontSize="13"
                               Foreground="#5E35B1"/>
                    <Border CornerRadius="6"
                            BorderBrush="#C7B8FF"
                            BorderThickness="1"
                            Background="White">
                        <TextBox x:Name="FirstNameTextBox"
                                 Height="41"
                                 FontSize="13"
                                 Padding="5"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 IsReadOnly="True"/>
                    </Border>
                </StackPanel>

                <!-- Last Name -->
                <StackPanel Margin="10" Grid.Row="0" Grid.Column="1">
                    <TextBlock Text="Last Name"
                               FontWeight="Bold"
                               FontSize="13"
                               Foreground="#5E35B1"/>
                    <Border CornerRadius="6"
                            BorderBrush="#C7B8FF"
                            BorderThickness="1"
                            Background="White">
                        <TextBox x:Name="LastNameTextBox"
                                 Height="41"
                                 FontSize="13"
                                 Padding="5"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 IsReadOnly="True"/>
                    </Border>
                </StackPanel>

                <!-- Email -->
                <StackPanel Margin="10" Grid.Row="1" Grid.Column="0">
                    <TextBlock Text="Email"
                               FontWeight="Bold"
                               FontSize="13"
                               Foreground="#5E35B1"/>
                    <Border CornerRadius="6"
                            BorderBrush="#C7B8FF"
                            BorderThickness="1"
                            Background="White">
                        <TextBox x:Name="EmailTxtBox"
                                 Height="41"
                                 FontSize="13"
                                 Padding="5"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 IsReadOnly="True"/>
                    </Border>
                </StackPanel>

                <!-- Subject -->
                <StackPanel Margin="10" Grid.Row="1" Grid.Column="1">
                    <TextBlock Text="Subject"
                               FontWeight="Bold"
                               FontSize="13"
                               Foreground="#5E35B1"/>
                    <Border CornerRadius="6"
                            BorderBrush="#C7B8FF"
                            BorderThickness="1"
                            Background="White">
                        <TextBox x:Name="SubjectTxtBox"
                                 Height="41"
                                 FontSize="13"
                                 Padding="5"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 IsReadOnly="True"/>
                    </Border>
                </StackPanel>

                <!-- Address -->
                <StackPanel Margin="10" Grid.Row="2" Grid.Column="0">
                    <TextBlock Text="Address"
                               FontWeight="Bold"
                               FontSize="13"
                               Foreground="#5E35B1"/>
                    <Border CornerRadius="6"
                            BorderBrush="#C7B8FF"
                            BorderThickness="1"
                            Background="White">
                        <TextBox x:Name="AddressTxtBox"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Height="109"
                                 Margin="0,5,0,0"
                                 FontSize="13"
                                 Padding="5"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 VerticalScrollBarVisibility="Auto"
                                 IsReadOnly="True"/>
                    </Border>
                </StackPanel>

                <!-- Photo -->
                <StackPanel Margin="10"
                            Grid.Row="2"
                            Grid.Column="1"
                            HorizontalAlignment="Left">
                    <TextBlock Text="Photo"
                               FontWeight="Bold"
                               FontSize="13"
                               Foreground="#5E35B1"/>
                    <Border x:Name="PhotoBorder"
                            BorderThickness="1"
                            BorderBrush="#C7B8FF"
                            Background="#faf8ff"
                            CornerRadius="10"
                            Height="109"
                            Width="109"
                            Margin="0,5,0,0"
                            HorizontalAlignment="Left">
                        <Grid>
                            <Image x:Name="ProfileImage"
                                   Stretch="UniformToFill"
                                   Visibility="Collapsed"/>
                            <TextBlock x:Name="PlaceholderText"
                                       Text="No photo"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="#9E9E9E"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       FontSize="11"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Close Button -->
                <Button x:Name="CloseButton"
                        Content="Close"
                        Style="{StaticResource AnimatedGradientButton}"
                        Grid.Row="2"
                        Grid.Column="1"
                        Height="40"
                        Margin="210,98,10,10"
                        Click="CloseButton_Click"/>
            </Grid>
        </StackPanel>
    </Border>
</Window>

<Window x:Class="TuteefyWPF.WindowsFolder.AddQuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TuteefyWPF.WindowsFolder"
        mc:Ignorable="d"
        Title="AddQuizWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#f0f0f0">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="79*"/>
            <RowDefinition Height="140*"/>
            <RowDefinition Height="145*"/>
            <RowDefinition Height="70*"/>
        </Grid.RowDefinitions>
        <Label x:Name="QuizTitle" 
                Content="Quiz Title" 
                IsEnabled="False" 
                FontWeight="Bold" 
                Foreground="#9600ff" 
                FontSize="40" 
                HorizontalContentAlignment="Left" 
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="35,16,0,0"
               Grid.Row="0" Height="63" Width="189"/>
        <TextBox
            x:Name="QuizTitleTextBox"
            Style="{StaticResource RoundedPlaceholderTextBox}"
            Tag="username"  
            Width="730"
            Height="65"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            BorderThickness="0, 0, 0, 3"
            BorderBrush="#9600ff"
            FontSize="20"
            TextWrapping="Wrap" Grid.Row="1"/>
        <Label x:Name="QuizDescription" 
            Content="Description" 
            IsEnabled="False" 
            FontWeight="Bold" 
            Foreground="gray" 
            FontSize="18" 
            HorizontalContentAlignment="Left" 
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="35,104,0,0"
            Grid.Row="1" Height="34" Width="107"/>
        <TextBox
            x:Name="QuizDesc"
            Style="{StaticResource RoundedPlaceholderTextBox}"
            Tag="username"  
            Width="730"
            Height="110"
            HorizontalAlignment="Center"
            VerticalContentAlignment="Top"
            VerticalAlignment="Top"
            BorderThickness="0, 0, 0, 3"
            BorderBrush="#9600ff"
            FontSize="16"
            TextWrapping="Wrap" Grid.Row="2" Margin="0,5,0,0"/>

        <Button x:Name="CreateQuizButton"
                Content="Create Quiz"
                Style="{StaticResource AnimatedGradientButton}"
                Width="140"
                Height="45"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,30,20"
                Opacity="1"
                Grid.Row="3" Click="CreateQuizButton_Click"/>

    </Grid>
</Window>

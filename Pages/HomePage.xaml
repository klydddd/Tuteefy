<Page
    x:Class="TuteefyWPF.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    Title="HomePage"
    Width="1224" Height="693">

    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="1.2*" />
        </Grid.ColumnDefinitions>

        <!-- 📈 Line Chart Panel -->
        <Border Margin="40,45,20,45"
                CornerRadius="20"
                Padding="20"
                Effect="{DynamicResource ShadowEffect}">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="#f2f0ff" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <StackPanel>
                <TextBlock Text="Student Progress Overview"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#5E35B1"
                           Margin="0,0,0,15"/>

                <lvc:CartesianChart Height="198" Margin="0,40,0,0">
                    <lvc:CartesianChart.Series>
                        <lvc:LineSeries Title="Progress"
                                        Stroke="#7C4DFF"
                                        Fill="#EDE7F6"
                                        PointGeometrySize="8"
                                        Values="{Binding ChartValues}" />
                    </lvc:CartesianChart.Series>
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Title="Weeks" Labels="{Binding Labels}" />
                    </lvc:CartesianChart.AxisX>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="Scores" />
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>
                <lvc:CartesianChart Height="198" Margin="0,40,0,0">
                    <lvc:CartesianChart.Series>
                        <lvc:LineSeries Title="Progress"
                            Stroke="#7C4DFF"
                            Fill="#EDE7F6"
                            PointGeometrySize="8"
                            Values="{Binding ChartValues}" />
                    </lvc:CartesianChart.Series>
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Title="Weeks" Labels="{Binding Labels}" />
                    </lvc:CartesianChart.AxisX>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="Scores" />
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>
            </StackPanel>
        </Border>

        <!-- 🗓️ Calendar + Tasks -->
        <Border Grid.Column="1"
                Margin="20,45,40,45"
                CornerRadius="20"
                Padding="25"
                Effect="{DynamicResource ShadowEffect}">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="#f2f0ff" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <StackPanel>
                <TextBlock Text="Schedule and Tasks"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#5E35B1"
                           Margin="0,0,0,15"/>
                <Calendar x:Name="TaskCalendar"
                          SelectionMode="SingleDate"
                          Background="Transparent"
                          BorderThickness="0"
                          Width="184">
                    <Calendar.Resources>
                        <Style TargetType="{x:Type CalendarDayButton}">
                            <Setter Property="Foreground" Value="#5E35B1"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Margin" Value="2"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type CalendarDayButton}">
                                        <Border CornerRadius="5"
                                                Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#EDE7F6"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#7C4DFF"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Calendar.Resources>
                </Calendar>

                <!-- Calendar -->

                <!-- Task List -->
                <StackPanel>
                    <TextBlock Text="Today's Tasks"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#5E35B1"
                               Margin="0,0,0,10"/>
                    <ListBox x:Name="TaskList"
                             Background="#FAFAFA"
                             BorderThickness="0"
                             Foreground="#5E35B1"
                             FontSize="14"
                             Height="251"
                             Padding="10"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Margin" Value="0,2,0,2"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border CornerRadius="8"
                                                    Background="#F3E5F5"
                                                    Padding="8"
                                                    SnapsToDevicePixels="True">
                                                <ContentPresenter/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                    <!-- Add & Delete Buttons Side by Side -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,15,0,0" >
                        <Button Content="+ Add Task"
            Width="274"
            Margin="0,0,10,0"
            Background="#7C4DFF"
            Foreground="White"
            FontWeight="Bold"
            BorderBrush="Transparent"
            Height="40"
            Cursor="Hand"
            Click="AddTask_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                        CornerRadius="10"
                        Padding="5">
                                        <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation To="#B39DDB"
                                        Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                        Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Button.Triggers>
                        </Button>

                        <Button Content="🗑 Delete Task"
            Width="275"
            Background="#E57373"
            Foreground="White"
            FontWeight="Bold"
            BorderBrush="Transparent"
            Height="40"
            Cursor="Hand"
            Click="DeleteTask_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                        CornerRadius="10"
                        Padding="5">
                                        <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation To="#EF9A9A"
                                        Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                        Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Button.Triggers>
                        </Button>
                    </StackPanel>

                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>

    <!-- Shadow effect resource -->
    <Page.Resources>
        <DropShadowEffect x:Key="ShadowEffect" Color="#888" BlurRadius="10" ShadowDepth="2" Opacity="0.4"/>
    </Page.Resources>
</Page>

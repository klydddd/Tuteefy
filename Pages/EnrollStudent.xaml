<Window x:Class="TuteefyWPF.Pages.EnrollStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TuteefyWPF.Pages"
        mc:Ignorable="d"
        Title="EnrollStudent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#f9f6ff">


        <Window.Resources>
            <DropShadowEffect x:Key="ShadowEffect"
                          Color="#888"
                          BlurRadius="10"
                          ShadowDepth="2"
                          Opacity="0.4"/>
        </Window.Resources>

        <!-- 🧾 Main Card -->
        <Border Width="Auto"
            Effect="{StaticResource ShadowEffect}"
            VerticalAlignment="Top"
            HorizontalAlignment="Center">

            <!-- Gradient background like homepage cards -->
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="#f9f6ff" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <StackPanel Width="805" Height="406">
                <!-- Header Bar -->
                <!-- 📋 Form Content -->
                <!-- Header Bar -->
                <Border Padding="14">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#9600ff" Offset="0"/>
                            <GradientStop Color="#AEBAF8" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <TextBlock Text="Student Details"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>
                </Border>

                <!-- 📋 Form Content -->
                <Grid Margin="0,20,0,0" Height="Auto" Width="762">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- First Name -->
                    <StackPanel Margin="10" Grid.Row="0" Grid.Column="0">
                        <TextBlock Text="First Name *"
                               FontWeight="Bold"
                               FontSize="13"
                               Foreground="#5E35B1"/>
                        <Border CornerRadius="6"
                            BorderBrush="#C7B8FF"
                            BorderThickness="1"
                            Background="White">
                            <TextBox Text="Historia"
                                 Margin="0,5,0,0"
                                 Height="35"
                                 FontSize="13"
                                 Padding="5"
                                 Background="Transparent"
                                 BorderThickness="0"
/>
                        </Border>
                    </StackPanel>

                    <!-- Last Name -->
                    <StackPanel Margin="10" Grid.Row="0" Grid.Column="1">
                        <TextBlock Text="Last Name *"
                               FontWeight="Bold"
                               FontSize="13"
                               Foreground="#5E35B1"/>
                        <Border CornerRadius="6"
                            BorderBrush="#C7B8FF"
                            BorderThickness="1"
                            Background="White">
                            <TextBox Text="Reiss"
                                 Margin="0,5,0,0"
                                 Height="35"
                                 FontSize="13"
                                 Padding="5"
                                 Background="Transparent"
                                 BorderThickness="0"
/>
                        </Border>
                    </StackPanel>

                    <!-- Email -->
                    <StackPanel Margin="10" Grid.Row="1" Grid.Column="0">
                        <TextBlock Text="Email *"
                               FontWeight="Bold"
                               FontSize="13"
                               Foreground="#5E35B1"/>
                        <Border CornerRadius="6"
                            BorderBrush="#C7B8FF"
                            BorderThickness="1"
                            Background="White">
                            <TextBox Text="abibi@auf.edu.ph"
                                 Margin="0,5,0,0"
                                 Height="35"
                                 FontSize="13"
                                 Padding="5"
                                 Background="Transparent"
                                 BorderThickness="0"
/>
                        </Border>
                    </StackPanel>

                    <!-- Phone -->
                    <StackPanel Margin="10" Grid.Row="1" Grid.Column="1">
                        <TextBlock Text="Phone *"
                               FontWeight="Bold"
                               FontSize="13"
                               Foreground="#5E35B1"/>
                        <Border CornerRadius="6"
                            BorderBrush="#C7B8FF"
                            BorderThickness="1"
                            Background="White">
                            <TextBox Text="+639953202611 send gcash nyeyeye"
                                 Margin="0,5,0,0"
                                 Height="35"
                                 FontSize="13"
                                 Padding="5"
                                 Background="Transparent"
                                 BorderThickness="0"
/>
                        </Border>
                    </StackPanel>

                    <!-- Address -->
                    <StackPanel Margin="10" Grid.Row="2" Grid.Column="0">
                        <TextBlock Text="Address *"
                               FontWeight="Bold"
                               FontSize="13"
                               Foreground="#5E35B1"/>
                        <Border CornerRadius="6"
                            BorderBrush="#C7B8FF"
                            BorderThickness="1"
                            Background="White">
                            <TextBox TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Height="109"
                                 Margin="0,5,0,0"
                                 FontSize="13"
                                 Padding="5"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."/>
                        </Border>
                    </StackPanel>

                    <!-- Photo Upload -->
                    <StackPanel Margin="10"
                            Grid.Row="2"
                            Grid.Column="1"
                            HorizontalAlignment="Left">
                        <TextBlock Text="Photo *"
                               FontWeight="Bold"
                               FontSize="13"
                               Foreground="#5E35B1"/>
                        <Border BorderThickness="1"
                            BorderBrush="#C7B8FF"
                            Background="#faf8ff"
                            CornerRadius="10"
                            Height="109"
                            Width="109"
                            Margin="0,5,0,0"
                            AllowDrop="True"
                            HorizontalAlignment="Left">
                            <TextBlock Text="Drag and drop or click here to select file"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="#9E9E9E"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   FontSize="11"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
    </Window>
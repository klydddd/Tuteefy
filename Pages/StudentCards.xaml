<Page x:Class="TuteefyWPF.StudentCards"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TuteefyWPF"
      mc:Ignorable="d" 
      d:DesignHeight="693" d:DesignWidth="1632"
      Title="StudentCards">
    <Grid>
        <ScrollViewer x:Name="CardScrollViewer"
                      VerticalScrollBarVisibility="Hidden"
                      HorizontalScrollBarVisibility="Disabled"
                      CanContentScroll="True"
                      PanningMode="VerticalOnly"
                      Margin="10"
                      PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
            <WrapPanel x:Name="StudentCardsPanel"
                       Orientation="Horizontal"
                       Margin="10"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" />
        </ScrollViewer>

        <!-- Fixed Add Student Button -->
        <Button x:Name="AddStudentButton"
                Content="Add Student"
                Style="{StaticResource AnimatedGradientButton}"
                Width="140"
                Height="45"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,30,30"
                Click="AddStudentButton_Click"
                Opacity="1"/>
    </Grid>
</Page>
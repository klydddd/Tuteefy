<Page x:Class="TuteefyWPF.Pages.QuizPages.QuizView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TuteefyWPF.Pages.QuizPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="QuizView">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- First Column - Scrollable -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Label x:Name="QuizTitle" 
                        Content="Quiz Title" 
                        IsEnabled="False" 
                        FontWeight="Bold" 
                        Foreground="#9600ff" 
                        FontSize="40" 
                        HorizontalContentAlignment="Left" 
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Margin="25,25,0,0" Height="63" Width="189"/>
                <Label x:Name="QuizDesc" 
                    Content="Quiz Description" 
                    IsEnabled="False" 
                    FontWeight="Bold" 
                    Foreground="gray" 
                    FontSize="14" 
                    HorizontalContentAlignment="Left" 
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="25,0,0,0" Height="29" Width="119"/>

                <!-- Container for Quiz Question Cards -->
                <StackPanel x:Name="QuizQuestionsContainer" Margin="25,20,25,25">
                    <!-- Quiz question cards will be added here dynamically -->
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Second Column - Question Tracker -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label x:Name="QuestionsLabel" 
                Content="Questions" 
                IsEnabled="False" 
                FontWeight="Bold" 
                Foreground="#AEBAF8" 
                FontSize="14" 
                HorizontalContentAlignment="Left" 
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="10,53,0,0" Height="28" Width="119" 
                Grid.Row="0"/>

            <ScrollViewer Grid.Row="1"
                          Padding="5, 0 , 0 ,0"
                          VerticalScrollBarVisibility="Auto" 
                          Margin="10,0,10,225">
                <StackPanel x:Name="QuestionTrackerPanel">
                    <!-- Question tracker items will be added here -->
                    <TextBlock Text="Question 1" 
                               Foreground="Gray" 
                               FontSize="13" 
                               Margin="0,5,0,5"
                               Cursor="Hand"/>
                    <TextBlock Text="Question 2" 
                               Foreground="Gray" 
                               FontSize="13" 
                               Margin="0,5,0,5"
                               Cursor="Hand"/>
                    <TextBlock Text="Question 3" 
                               Foreground="Gray" 
                               FontSize="13" 
                               Margin="0,5,0,5"
                               Cursor="Hand"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
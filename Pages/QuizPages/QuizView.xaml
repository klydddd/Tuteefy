<Page x:Class="TuteefyWPF.Pages.QuizPages.QuizView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TuteefyWPF.Pages.QuizPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="QuizView">

    <Page.Resources>
        <Style x:Key="BoxRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#F9F9F9"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="bdr"
                            CornerRadius="5" 
                            BorderThickness="{TemplateBinding BorderThickness}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            Background="{TemplateBinding Background}"
                            Padding="15,12">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="BorderBrush" Value="#9600ff"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bdr" Property="BorderBrush" Value="#9600ff"/>
                                <Setter TargetName="bdr" Property="Background" Value="#F3E5FF"/>
                                <Setter TargetName="bdr" Property="BorderThickness" Value="2"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#9600ff"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- First Column - Scrollable -->
        <Grid Grid.Column="0">
            <ScrollViewer VerticalScrollBarVisibility="Hidden" Margin="0,0,0,70">
                <StackPanel>
                    <Label x:Name="QuizTitle" 
                            Content="Quiz Title" 
                            IsEnabled="False" 
                            FontWeight="Bold" 
                            Foreground="#9600ff" 
                            FontSize="40" 
                            HorizontalContentAlignment="Left" 
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left"
                            Margin="25,25,0,0" Height="63" Width="500"/>
                    <Label x:Name="QuizDesc" 
                        Content="Quiz Description" 
                        IsEnabled="False" 
                        FontWeight="Bold" 
                        Foreground="gray" 
                        FontSize="14" 
                        HorizontalContentAlignment="Left" 
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Margin="25,0,0,0" Height="29" Width="500"/>
                    <!-- Container for Quiz Question Cards -->
                    <StackPanel x:Name="QuizQuestionsContainer" Margin="25,20,25,25">
                        <!-- Quiz question cards will be added here dynamically -->
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Add Question Button -->
            <Button x:Name="AddQuestionButton"
                    Content="Add Question"
                    Style="{StaticResource AnimatedGradientButton}"
                    Width="140"
                    Height="45"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,0,30,10" Click="AddQuestionButton_Click"
                    />

        </Grid>

        <!-- Second Column - Question Tracker + Assign -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Assign student combo -->
            <StackPanel Orientation="Vertical" Margin="10,25,10,0" Grid.Row="0">
                <TextBlock x:Name="AssignText"  Text="Assign to student" FontWeight="Bold" Foreground="#AEBAF8" Margin="0,0,0,6"/>
                <ComboBox x:Name="AssignStudentComboBox" Width="220" SelectionChanged="AssignStudentComboBox_SelectionChanged"/>
            </StackPanel>

            <Label x:Name="QuestionsLabel" 
                Content="Questions" 
                IsEnabled="False" 
                FontWeight="Bold" 
                Foreground="#AEBAF8" 
                FontSize="14" 
                HorizontalContentAlignment="Left" 
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="10,10,0,0" Height="28" Width="119" 
                Grid.Row="1"/>

            <ScrollViewer Grid.Row="2"
                          Padding="5,0,0,0"
                          VerticalScrollBarVisibility="Auto" 
                          Margin="10,0,10,225">
                <StackPanel x:Name="QuestionTrackerPanel">
                    <!-- Question tracker items will be added here -->
                </StackPanel>
            </ScrollViewer>

            <Button x:Name="FinishButton"
                    Grid.Row="2"
                    Content="Finish"
                    Style="{StaticResource AnimatedGradientButton}"
                    Width="140"
                    Height="45"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,0,50,10" Click="FinishButton_Click"
                    />
        </Grid>
    </Grid>
</Page>
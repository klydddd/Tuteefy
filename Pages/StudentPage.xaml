<Page x:Class="TuteefyWPF.Pages.StudentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      xmlns:local="clr-namespace:TuteefyWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="Transparent"
      Title="StudentPage">

    <Page.Resources>
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#9600ff" BlurRadius="15" ShadowDepth="5" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#5E35B1"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="10,0,0,10"/>
        </Style>

        <Style x:Key="CardIcon" TargetType="Path">
            <Setter Property="Fill" Value="#9600ff"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Stretch" Value="Uniform"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="AccentButton" TargetType="Button">
            <Setter Property="Background" Value="#9600ff"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#AEBAF8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource AccentButton}">
            <Setter Property="Background" Value="#FF5252"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF867C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#F9F9F9"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <TextBlock x:Name="txtGreet" Text="Welcome, Student!" 
                   FontSize="28" FontWeight="Bold" 
                   Foreground="#9600ff" 
                   Margin="50,30,0,0"/>

        <Grid Margin="40,90,40,40">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource ModernCard}" Margin="0,0,15,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Path Data="M3,13h8V3H3V13z M3,21h8v-6H3V21z M13,21h8v-6h-8V21z M13,3v8h8V3H13z" Style="{StaticResource CardIcon}"/>
                        <TextBlock Text="To-Do List" Style="{StaticResource CardHeader}"/>
                    </StackPanel>

                    <ListBox Grid.Row="1"
                             x:Name="ToDoListBox" 
                             Background="Transparent" 
                             BorderThickness="0"
                             Foreground="#1E1E1E"
                             DisplayMemberPath="Content"
                             Margin="0,0,0,10"/>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                        <TextBox x:Name="TaskInputBox" Width="150" Height="30" Margin="0,0,5,0"/>

                        <Button Content="Add" Width="70" Height="30" 
                                Style="{StaticResource AccentButton}" 
                                Margin="0,0,5,0" 
                                Click="AddTask_Click"/>

                        <Button Content="Remove" Width="70" Height="30" 
                                Style="{StaticResource DangerButton}" 
                                Click="RemoveTask_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource ModernCard}" Margin="15,0,0,15">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
                        <Path Data="M16,6l2.29,2.29l-4.88,4.88l-4-4L2,16.59L3.41,18l6-6l4,4l6.3-6.29L22,12V6H16z" Style="{StaticResource CardIcon}"/>
                        <TextBlock Text="Your Performance" Style="{StaticResource CardHeader}"/>
                    </StackPanel>

                    <lvc:CartesianChart Series="{Binding SeriesCollection}" LegendLocation="None">
                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis Title="Quizzes" Labels="{Binding Labels}">
                                <lvc:Axis.Separator>
                                    <lvc:Separator Step="1"/>
                                </lvc:Axis.Separator>
                            </lvc:Axis>
                        </lvc:CartesianChart.AxisX>
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis Title="Score" MinValue="0"/>
                        </lvc:CartesianChart.AxisY>
                    </lvc:CartesianChart>
                </DockPanel>
            </Border>

            <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource ModernCard}" Margin="0,15,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <Path Data="M12,2l-5.5,9h11L12,2z M12,22l5.5-9h-11L12,22z" Style="{StaticResource CardIcon}"/>
                            <TextBlock Text="Review Lessons" Style="{StaticResource CardHeader}" Margin="10,0,0,0"/>
                        </StackPanel>
                        <TextBlock Text="Access your assigned learning materials and documents." Foreground="Gray" FontSize="14"/>
                    </StackPanel>

                    <Button Grid.Column="1" 
                            Content="Go to Lessons" 
                            Width="150" Height="40" 
                            Style="{StaticResource AccentButton}" 
                            Click="GoToLessons_Click"/>
                </Grid>
            </Border>

        </Grid>
    </Grid>
</Page>